<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/vw_bootstrapper"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_lbl_ctrlr_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:editable="false"
        android:enabled="true"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:text="@string/ctrlr_status"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_val_tegola_ctrlr_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/tv_lbl_ctrlr_status"
        android:layout_toEndOf="@id/tv_lbl_ctrlr_status"
        android:editable="false"
        android:enabled="true"
        android:text="@string/stopped"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_lbl_srvr_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_lbl_ctrlr_status"
        android:layout_marginBottom="10dp"
        android:editable="false"
        android:enabled="true"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:text="@string/srvr_status"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_val_tegola_srvr_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_lbl_ctrlr_status"
        android:layout_toRightOf="@+id/tv_lbl_srvr_status"
        android:layout_toEndOf="@+id/tv_lbl_srvr_status"
        android:editable="false"
        android:text="@string/stopped"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_lbl_srvr_console_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lbl_srvr_status"
        android:text="@string/srvr_console_ouput"/>

    <LinearLayout android:id="@+id/tegola_console_output_container"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="200dp"
                  android:layout_below="@+id/tv_lbl_srvr_console_output"
                  android:background="@android:color/background_dark"
                  android:orientation="vertical"
                  android:visibility="visible">

        <ScrollView
            android:id="@+id/scrvw_tegola_console_output"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tv_tegola_console_output"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"/>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lbl_get_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tegola_console_output_container"
        android:layout_marginBottom="15dp"
        android:editable="false"
        android:enabled="true"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="15dp"
        android:text="@string/lbl_get"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_val_get_uri__static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tegola_console_output_container"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/tv_lbl_get_uri"
        android:layout_toEndOf="@+id/tv_lbl_get_uri"
        android:paddingTop="15dp"
        android:text="@string/uri_static"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/edt_val_get_uri__dynamic"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tegola_console_output_container"
        android:layout_toRightOf="@+id/tv_val_get_uri__static"
        android:layout_toEndOf="@+id/tv_val_get_uri__static"
        android:layout_alignTop="@+id/tv_val_get_uri__static"
        android:editable="true"
        android:ems="8"
        android:inputType="textUri"
        android:text="**custom_url_tail**"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_above="@+id/tv_val_got_uri"/>

    <Button
        android:id="@+id/btn_get_uri_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tegola_console_output_container"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/edt_val_get_uri__dynamic"
        android:layout_toEndOf="@+id/edt_val_get_uri__dynamic"
        android:text="@string/go"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/tv_lbl_got_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lbl_get_uri"
        android:layout_marginBottom="10dp"
        android:editable="false"
        android:enabled="true"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:text="@string/lbl_got"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_val_got_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/tv_lbl_get_uri"
        android:layout_toRightOf="@+id/tv_lbl_got_uri"
        android:layout_toEndOf="@+id/tv_lbl_got_uri"
        android:text="**got_url_goes_here**"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:textStyle="italic"/>

</RelativeLayout>
